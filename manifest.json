{
	"manifest_version": 2,
	"name": "Save Tabs",
	"author": "Ari",
	"version": "1.0",
	"description": "An app to record the list of all open tabs in the browser. So that you can visit them later.",

	"browser_action": {
		"default_popup": "views/popup.html"
	},

	"permissions": ["storage", "tabs", "chrome://favicon/"],

	"content_security_policy": "img-src * 'self' chrome://favicon",

	"background": {
		"scripts": ["javascript/background.js"]
	}
}
